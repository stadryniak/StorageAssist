@{
}

<div class="bg-light">
    <p class="display-4">Manage storages</p>
</div>
<div class="bg-light">
    <p>
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#AddStorageForm" aria-expanded="false" aria-controls="collapseExample">
            Add storage
        </button>
    </p>

    <div class="collapse" id="AddStorageForm">
        <div class="row">
            <div class="col-12">
                <form asp-action="AddStorage">
                    <label class="font-weight-bold">Storage name:</label>
                    <input class="form-control" type="text" maxlength="50" name="StorageName" />
                    <div class="form-group">
                        <label class="font-weight-bold">Storage type:</label>
                        <div class="form-check">
                            <input type="radio" name="StorageType" value="Fridge" />
                            <label class="form-check-label">Fridge</label>
                            <input type="radio" name="StorageType" value="Freezer" />
                            <label class="form-check-label">Freezer</label>
                            <input type="radio" name="StorageType" value="Other" />
                            <label class="form-check-label">Other</label>
                        </div>
                    </div>
                    <label class="font-weight-bold">Shared resource id:</label>
                    <input class="form-control" type="text" maxlength="50" name="CommonResourceId" />
                    <div>
                        <button class="btn btn-info" type="submit">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
