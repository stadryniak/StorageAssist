@model IEnumerable<StorageAssist.Models.ProductOpinion>

@{
    ViewData["Title"] = "Products' Opinions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products' opinions</h1>

<div class="mb-1 mt-1">
    <form>
        <button class="btn btn-success" asp-controller="ProductOpinion" asp-action="AddProductOpinion">Create New</button>
    </form>
</div>
<div class="text-center">
    <table class="table table-sm table-striped table-hover">
        <thead>
            <tr class="row">
                <th class="col-2 align-middle" scope="col">
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th class="col-1 align-middle" scope="col">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="col-1 align-middle" scope="col">
                    @Html.DisplayNameFor(model => model.PriceOpinion)
                </th>
                <th class="col-1 align-middle" scope="col">
                    @Html.DisplayNameFor(model => model.Quality)
                </th>
                <th class="col-1 align-middle" scope="col">
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th class="col-2 align-middle" scope="col">
                    @Html.DisplayNameFor(model => model.PriceQualityRatio)
                </th>
                <th class="col-2 align-middle" scope="col">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="col-2 align-middle" scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="row">
                    <th class="col-2 align-middle" scope="row">
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </th>
                    <td class="col-1 align-middle">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="col-1 align-middle">
                        @Html.DisplayFor(modelItem => item.PriceOpinion)
                    </td>
                    <td class="col-1 align-middle">
                        @Html.DisplayFor(modelItem => item.Quality)
                    </td>
                    <td class="col-1 align-middle">
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td class="col-2 align-middle">
                        @Html.DisplayFor(modelItem => item.PriceQualityRatio)
                    </td>
                    <td class="col-2 align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="col-2 align-middle">
                        <form class="d-inline">
                            <button class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.ProductOpinionId">Edit</button>
                        </form>
                        <form class="d-inline">
                            <button class="btn btn-sm btn-dark" asp-action="Details" asp-route-id="@item.ProductOpinionId">Details</button>
                        </form>
                        <form class="d-inline" asp-controller="Delete" asp-action="Index">
                            <button class="d-inline btn btn-sm btn-danger" onclick="submit">Delete</button>
                            <input type="hidden" name="id" value="@item.ProductOpinionId" />
                            <input type="hidden" name="ownerId" value="" />
                            <input type="hidden" name="name" value="@item.ProductName" />
                            <input type="hidden" name="typePost" value="ProductOpinion" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
