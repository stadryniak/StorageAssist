@model Note
@{
    ViewData["Title"] = "Add note";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-light">
    <p class="display-4">Add note</p>
</div>

<div class="bg-light">
    <div class="m-1">
        <form class="form-group" asp-controller="Notes" asp-action="AddNoteDb">
            <!-- Note name -->
            <div class="form-group">
                <label class="font-weight-bold">Note name:</label>
                <input class="form-control" type="text" maxlength="50" name="noteName" />
            </div>

            <!-- text -->
            <div class="form-group">
                <label class="font-weight-bold">Note text</label>
                <textarea name="noteText" class="form-control" type="text" rows="3" maxlength="1023"></textarea>
            </div>

            <!-- submit button -->
            <div class="m-2">
                <button class="btn btn-success" type="submit">Add note</button>
            </div>
            <input name="commonResourceId" type="hidden" value="@Model.CommonResourceId" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}